{
  "name": "@kb-labs/sdk",
  "version": "1.0.0",
  "description": "Core SDK - Helpers for command/route/action/webhook definitions and testing",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./testing": {
      "types": "./dist/testing/index.d.ts",
      "import": "./dist/testing/index.js",
      "require": "./dist/testing/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "@kb-labs/core-platform": "link:../../../kb-labs-core/packages/core-platform",
    "@kb-labs/core-runtime": "link:../../../kb-labs-core/packages/core-runtime",
    "@kb-labs/core-sys": "link:../../../kb-labs-core/packages/core-sys",
    "@kb-labs/perm-presets": "link:../../../kb-labs-shared/packages/shared-perm-presets",
    "@kb-labs/plugin-contracts": "link:../../../kb-labs-plugin/packages/plugin-contracts",
    "@kb-labs/shared-cli-ui": "link:../../../kb-labs-shared/packages/shared-cli-ui",
    "@kb-labs/shared-command-kit": "link:../../../kb-labs-shared/packages/shared-command-kit",
    "@kb-labs/shared-testing": "link:../../../kb-labs-shared/packages/shared-testing",
    "@kb-labs/shared-tool-kit": "link:../../../kb-labs-shared/packages/shared-tool-kit",
    "@kb-labs/studio-contracts": "link:../../../kb-labs-studio/packages/studio-contracts"
  },
  "devDependencies": {
    "@kb-labs/devkit": "link:../../../kb-labs-devkit",
    "@types/node": "^24.3.3",
    "@vitest/ui": "^3.0.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "kb-labs",
    "plugin",
    "sdk",
    "v3",
    "helpers",
    "testing"
  ],
  "author": "KB Labs Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kb-labs/kb-labs-sdk.git",
    "directory": "packages/sdk"
  },
  "private": true,
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
